<Window x:Class="RapidHelper.Apps.TextTemplates.TextTemplatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RapidHelper"
        mc:Ignorable="d"
        Title="TextPresets"
        Height="882"
        Width="1407"
        WindowStartupLocation="CenterScreen"
        FontSize="12"
        FontFamily="Verdana"
        Style="{StaticResource {x:Type Window}}">
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*" />
            <ColumnDefinition Width="99*" />
            <ColumnDefinition Width="215*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="127*" />
            <ColumnDefinition Width="143*" />
            <ColumnDefinition Width="299*" />
            <ColumnDefinition Width="133*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*" />
            <RowDefinition Height="55" />
            <RowDefinition Height="36*" />
            <RowDefinition Height="65" />
        </Grid.RowDefinitions>
        <Label Content="Резьба"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"
               Height="24"
               Margin="0,1,0,0"
               Grid.Row="3"
               HorizontalAlignment="Center"
               Grid.Column="1"
               Width="52" />
        <Label Content="Размер под ключ"
               HorizontalContentAlignment="Center"
               Margin="0,4,0,37"
               HorizontalAlignment="Center"
               Width="117"
               Grid.Column="4"
               Grid.Row="3" />
        <Label Content="Точки воздействия"
               HorizontalContentAlignment="Center"
               Margin="0,1,3,39"
               Grid.Row="3" />
        <CheckBox x:Name="InstallationCheckBox"
                  Content="Установить"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked"
                  Margin="10,11,38,39"
                  Grid.Row="3"
                  Grid.Column="2" />
        <CheckBox x:Name="RemoveCheckBox"
                  Content="Снять"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked"
                  Margin="10,38,38,12"
                  Grid.Row="3"
                  Grid.Column="2" />
        <ComboBox x:Name="ComboBoxInputThread"
                  IsEditable="True"
                  SelectionChanged="ComboBoxInputThread_SelectionChanged"
                  HorizontalContentAlignment="Left"
                  Margin="10,27,10,18"
                  Grid.Row="3"
                  Grid.Column="1" />
        <ComboBox x:Name="ComboBoxWrenchSize"
                  IsEditable="True"
                  SelectionChanged="ComboBoxWrenchSize_SelectionChanged"
                  Margin="10,31,8,12"
                  Grid.Row="3"
                  Grid.Column="4"
                  FontSize="12" />
        <ComboBox x:Name="ComboBoxToolType"
                  SelectionChanged="ComboBoxToolType_SelectionChanged"
                  FontFamily="Verdana"
                  FontSize="12"
                  IsEditable="True"
                  VerticalAlignment="Top"
                  Margin="10,31,10,0"
                  Height="22"
                  Grid.Row="3"
                  Grid.Column="5">
            <ComboBoxItem Content="Трещотка"
                          Tag="ratchet" />
            <ComboBoxItem Content="Рожковый"
                          Tag="openEnd" />
            <ComboBoxItem Content="Другие"
                          Tag="other" />
        </ComboBox>
        <TextBox x:Name="TextBoxTemplate"
                 Text=""
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 FontFamily="Verdana"
                 FontSize="13"
                 PreviewMouseDoubleClick="TextBoxTemplate_PreviewMouseDoubleClick"
                 Margin="10,29,10,14"
                 Grid.Row="2"
                 Grid.ColumnSpan="4" />
        <TextBox x:Name="ImpactPointsTextBox"
                 TextWrapping="Wrap"
                 PreviewTextInput="ImpactPointsTextBox_PreviewTextInput"
                 Margin="14,27,0,18"
                 Grid.Row="3"
                 HorizontalAlignment="Left"
                 Width="52" />
        <CheckBox x:Name="WrenchSizeFilterCheckBox"
                  Content="С учетом резьбы"
                  VerticalAlignment="Top"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked"
                  Height="14"
                  Margin="32,10,0,0"
                  Grid.Row="3"
                  Grid.Column="6"
                  HorizontalAlignment="Left"
                  Width="126" 
                  IsEnabled="False"/>
        <Button x:Name="ButtonResetAll"
                Content="Сбросить"
                Click="ButtonResetAll_Click"
                Margin="0,15,11,14"
                Grid.Row="3"
                Grid.Column="3"
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Right"
                Width="121" />
        <ListBox x:Name="ListBoxToolsExport"
                 SelectionMode="Single"
                 HorizontalContentAlignment="Stretch"
                 RenderTransformOrigin="0.5,0.5"
                 Margin="10,35,11,4"
                 d:ItemsSource="{d:SampleData ItemCount=5}"
                 Grid.ColumnSpan="4">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Stretch"
                                Background="WhiteSmoke">
                        <!-- Контекстное меню -->
                        <StackPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Копировать инструмент"
                                          Click="ContextMenu_CopyTool_Click"
                                          CommandParameter="{Binding}" />
                            </ContextMenu>
                        </StackPanel.ContextMenu>
                        <TextBox Text="{Binding Name, Mode=OneWay}"
                                 FontSize="13"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnlyCaretVisible="True"
                                 Margin="0, 3, 5, 0"/>

                        <TextBox Text="{Binding IdentNumber, Mode=OneWay}"
                                 FontSize="13"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnlyCaretVisible="True"
                                 Margin="3,2,0,5" />

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="ButtonCopyTags"
                Content="Копировать теги"
                Click="ButtonCopyTags_Click"
                Grid.Row="1"
                Margin="0,10,11,10"
                Grid.Column="3"
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Right"
                Width="121" />
        <Label x:Name="ToolsExportTitle"
               Content="Вспомогательное оборудование"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Top"
               Height="30"
               FontFamily="Verdana"
               FontWeight="Bold"
               FontSize="16"
               Grid.ColumnSpan="4"
               Margin="10,0,17,0" />
        <Label x:Name="TemplateTitle"
               Content="Шаблон"
               FontWeight="DemiBold"
               FontSize="16"
               Margin="0,1,17,0"
               Grid.Row="2"
               Grid.Column="0"
               HorizontalContentAlignment="Center"
               Grid.ColumnSpan="4"
               VerticalAlignment="Top"
               Height="29" />
        <Button x:Name="ButtonResetSelection"
                Content="Снять выделение"
                Click="ButtonResetSelection_Click"
                Grid.Row="3"
                Grid.Column="7"
                Margin="5,15,10,13"
                HorizontalContentAlignment="Center" />
        <Label x:Name="ToolsListTitle"
               Content="Инструменты"
               VerticalAlignment="Top"
               FontWeight="Bold"
               FontSize="16"
               Grid.Column="4"
               HorizontalContentAlignment="Center"
               Height="29"
               Margin="10,0,10,0"
               Grid.ColumnSpan="3" />
        <Label x:Name="CopyNotificationLabel"
               Content="Текст скопирован в буфер обмена!"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Opacity="0"
               FontSize="12"
               Margin="10,3,3,3"
               Grid.ColumnSpan="3"
               Grid.Row="1" />
        <CheckBox x:Name="MomentFilterCheckBox"
                  Content="С учетом моментов"
                  VerticalAlignment="Top"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked"
                  Height="14"
                  Margin="32,31,41,0"
                  Grid.Row="3"
                  Grid.Column="6" 
                  IsEnabled="False"/>
        <Label Content="Тип инструмента"
               Margin="0,5,0,36"
               Grid.Row="3"
               Grid.Column="5"
               HorizontalContentAlignment="Center"
               HorizontalAlignment="Center"
               Width="143" />
        <TabControl Grid.Column="4"
                    Grid.RowSpan="3"
                    Margin="10,35,10,0"
                    SelectionChanged="TabControl_SelectionChanged"
                    Grid.ColumnSpan="4">

            <!-- Первый TabItem -->
            <TabItem Header="Инструменты"
                     Name="TabTools">
                <Grid Background="#FFE5E5E5"
                      Margin="0,0,10,0">
                    <ListBox x:Name="ListBoxTools"
                             d:ItemsSource="{d:SampleData ItemCount=5}"
                             DisplayMemberPath="Name"
                             SelectionChanged="ListBoxTools_SelectionChanged"
                             SelectionMode="Multiple"
                             FontFamily="Verdana"
                             FontSize="13"
                             Margin="17,10,18,14" />
                </Grid>
            </TabItem>

            <!-- Второй TabItem -->
            <TabItem Header="Расходные материалы"
                     Name="TabSupplies">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="ListBoxSupplies"
                             d:ItemsSource="{d:SampleData ItemCount=5}"
                             DisplayMemberPath="Name"
                             SelectionChanged="ListBoxSupplies_SelectionChanged"
                             SelectionMode="Multiple"
                             FontFamily="Verdana"
                             FontSize="13"
                             Margin="17,10,18,14" />
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
