<Window x:Class="RapidHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RapidHelper"
        mc:Ignorable="d"
        Title="Rapid Helper"
        Height="450"
        Width="280"
        FontSize="11"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Style="{StaticResource {x:Type Window}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="393*" />
            <RowDefinition Height="41*" />
        </Grid.RowDefinitions>
        <Button x:Name="EncoderButton"
                Content="Кодировка"
                HorizontalAlignment="Center"
                Margin="0,45,0,0"
                VerticalAlignment="Top"
                Height="35"
                Width="Auto"
                Click="EncoderButton_Click" 
                Padding="6"/>
        <Button x:Name="ExtractHtmlText"
                Content="Извлечь текст"
                HorizontalAlignment="Center"
                Margin="0,123,0,0"
                VerticalAlignment="Top"
                Height="35"
                Width="Auto"
                Click="ExtractHtmlText_Click"
                RenderTransformOrigin="0.5,0.5"
                Padding="6">
        </Button>
        <Button x:Name="TextPresetsButton"
                Content="Инструменты"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,195,0,0"
                Height="35"
                Click="TextPresetsButton_Click"
                Padding="6" />
        <Button x:Name="ProcedureReverserButton"
                Content="Инверт. процедуру"
                HorizontalAlignment="Center"
                Margin="0,262,0,0"
                VerticalAlignment="Top"
                Height="35"
                Width="Auto"
                Click="ProcedureReverserButton_Click"
                Padding="6" />
        <Button Content="Создать папки"
                HorizontalAlignment="Center"
                Margin="0,333,0,0"
                VerticalAlignment="Top"
                Height="35"
                Width="Auto"
                Click="Button_Click"
                Padding="6"/>
        <TextBlock x:Name="VersionBox"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   Text="TextBox"
                   Height="18"
                   VerticalAlignment="Center"
                   Width="Auto"
                   HorizontalAlignment="Center"
                   FontSize="10"
                   Grid.Row="1" />
    </Grid>
</Window>
