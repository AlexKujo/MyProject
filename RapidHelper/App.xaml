<Application x:Class="RapidHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Стиль для окон -->
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background"
                    Value="#FFF0F0F0" />
            <Setter Property="Icon"
                    Value="pack://application:,,,/EmbeddedResources/icon.ico" />
        </Style>
        <!-- Базовый стиль для всех контролов -->
        <Style TargetType="{x:Type Control}"
               x:Key="BaseControlStyle">
            <Setter Property="FontFamily"
                    Value="Verdana" />
        </Style>
        <!-- Специфический стиль для кнопок -->
        <Style TargetType="{x:Type Button}"
               BasedOn="{StaticResource BaseControlStyle}">
            <Setter Property="Background"
                    Value="WhiteSmoke" />
        </Style>
        
    </Application.Resources>
</Application>